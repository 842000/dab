type metadata = record {
    name: text;
    description: text;
    thumbnail: text;
    frontend: opt text;
    version: nat32;
};

type error = variant {
    NotAuthorized;
    NonExistantCanister;
    BadParameters;
    Unknown;
}

type response = variant {
    Ok : opt text;
    Err : error;
}

service : {
    "name" : () -> (text) query;
    
    "get" : (principal) -> (opt metadata) query;
    "add" : (principal, metadata) -> (response);
    "remove" : (principal) -> (response);
}
