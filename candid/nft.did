type nft_canister = record {
    principal_id: principal;
    name: text;
    standard: text;
};

service : {
    "name" : () -> (text) query;

    "add"    : (nft_canister) -> (text);
    "remove" : (text) -> (text);
    "edit"   : (text, opt principal, opt text) -> (text);
    
    "get_canister" : (text) -> (opt nft_canister);
    "get_all"      : () -> (vec nft_canister);
}