type ProfileMetadata = record {
    display_name: opt text;
    description: opt text;
    emoji: opt text;
    avatar: opt text;
    banner: opt text;
    version: nat32;
};

service : {
    "name"           :  () -> (text) query;

    "get_public_profile" : (opt principal) -> (opt ProfileMetadata);
    "set_display_name"   : (text) -> ();
    "set_description"    : (text) -> ();
    "set_emoji"          : (text)  -> ();
}